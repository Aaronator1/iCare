@model AddOrEditAccountCommand

@using (Html.Hack().BeginForm(setting =>
                              {
                                  setting.RedirectToSelf = true;
                                  setting.CloseDialog = true;
                              }))
{   
    @Html.HiddenFor(r => r.Id)
    @Html.HiddenFor(r => r.Type)
    <div class="control-group">
        <label class="control-label" for="inputEmail">Email</label>
        <div class="controls">
            @Html.TextBoxFor(r => r.Email)
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="inputPassword">First Name</label>
        <div class="controls">
            @Html.TextBoxFor(r => r.First)
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="inputPassword">Last Name</label>
        <div class="controls">
            @Html.TextBoxFor(r => r.Last)
        </div>
    </div>
    <div class="clearfix"></div>
    <hr/>
     @(Html.When(JqueryBind.Click)
     .PreventDefault()
     .StopPropagation()
     .Direct()
     .OnSuccess(dsl => dsl.WithId("dialog").JqueryUI().Dialog.Close())
     .AsHtmlAttributes(new { @class="btn btn-danger btn-lg"})
     .ToButton("Cancel"))
    <input type="submit" class="btn btn-primary btn-lg" value="Save" />
}





